<%- include('../layouts/boilerplate', { title: '' , body: '' }) %>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheet/purchase/edit.css">
    <!-- Nepali Datepicker -->
    <link href="https://nepalidatepicker.sajanmaharjan.com.np/nepali.datepicker/css/nepali.datepicker.v4.0.7.min.css"
        rel="stylesheet" type="text/css" />

    <style>
        #accountModal .modal-body {
            min-height: 400px;
            /* Ensures modal stays the same size */
            max-height: 500px;
            /* Limits height */
            overflow-y: auto;
            /* Allows scrolling */
        }

        #bill-details-container {
            max-height: 400px;
            overflow-y: auto;
            border: 1px solid #ccc;
            padding: 10px;
        }

        #items {
            table-layout: fixed;
            width: 100%;
        }

        /* Add this to prevent text selection during double-click */
        #transactionList tbody tr {
            user-select: none;
            -webkit-user-select: none;
        }

        /* Visual feedback for click actions */
        #transactionList tbody tr:active {
            transform: scale(0.99);
            transition: transform 0.1s;
        }

        /* Focus styles */
        #transactionList tbody tr:focus {
            outline: 2px solid #0d6efd;
            outline-offset: -2px;
        }
    </style>

    <div class="container wow-form expanded-container">
        <div class=" card mt-4 shadow-lg p-4 animate__animated animate__fadeInUp expanded-card">
            <div class="card-header">
                Update Purchase
                <span id="customAlertForBillNumber" style="color: red; display: none;">Invoice is required!</span>
                <span id="transactionDateError" style="color: red; display: none;">Invalid date!</span>
                <span id="nepaliDateError" style="color: red; display: none;">Invalid date!</span>
            </div>
            <div class="card-body">
                <form action="/purchase-bills/edit/<%=purchaseInvoice._id%>?_method=PUT" method="post" id="billForm"
                    class="wow-form">
                    <div class="form-group row">
                        <% if (companyDateFormat==='nepali' ) { %>
                            <!-- Nepali Date Fields -->
                            <div class="col">
                                <label for="transactionDateNepali">Transaction Date:</label>
                                <input type="date" name="transactionDateNepali" id="transactionDateNepali"
                                    class="form-control"
                                    value="<%= purchaseInvoice.transactionDate ? purchaseInvoice.transactionDate.toISOString().split('T')[0]: '' %>"
                                    onfocus="selectValue(this)" autofocus required autocomplete="off" />

                            </div>
                            <div class="col">
                                <label for="nepaliDate">Invoice Date:</label>
                                <input type="date" name="nepaliDate" id="nepaliDate" class="form-control" required
                                    value="<%= purchaseInvoice.date ? purchaseInvoice.date.toISOString().split('T')[0] : '' %>"
                                    onfocus="selectValue(this)" autocomplete="off" autofocus />

                            </div>

                            <% } else { %>
                                <!-- English Date Fields -->
                                <div class="col">
                                    <label for="transactionDateRoman">Transaction Date:</label>
                                    <input type="date" name="transactionDateRoman" id="transactionDateRoman"
                                        class="form-control"
                                        value="<%= purchaseInvoice.transactionDate ? purchaseInvoice.transactionDate.toISOString().split('T')[0]: '' %>"
                                        onfocus="selectValue(this)" autofocus required onblur="validateDate(this)"
                                        autocomplete="off">
                                    <span class="error-message" style="color: red; display: none;"></span>

                                </div>
                                <div class="col">
                                    <label for="purchaseInvoiceDate">Invoice Date:</label>
                                    <input type="date" name="purchaseInvoiceDate" id="purchaseInvoiceDate"
                                        class="form-control" required
                                        value="<%= purchaseInvoice.date ? purchaseInvoice.date.toISOString().split('T')[0] : '' %>"
                                        onfocus="selectValue(this)" onblur="validateDate(this)" autocomplete="off">
                                    <span class="error-message" style="color: red; display: none;"></span>

                                </div>
                                <% } %>
                                    <div class="col">
                                        <label for="billNumber">Vch. No:</label>
                                        <input type="text" name="billNumber" id="billNumber" class="form-control"
                                            value="<%= purchaseInvoice.billNumber %>"
                                            oninput="this.value='<%=purchaseInvoice.billNumber%>'"
                                            onfocus="selectValue(this)" autocomplete="off">
                                    </div>
                                    <div class="col">
                                        <label for="paymentMode">Payment Mode:</label>
                                        <select class="form-control" id="paymentMode" name="paymentMode"
                                            autocomplete="off">
                                            <option value="credit" <%=purchaseInvoice.paymentMode==='credit'
                                                ? 'selected' : '' %>>credit</option>
                                            <option value="cash" <%=purchaseInvoice.paymentMode==='cash' ? 'selected'
                                                : '' %>>cash</option>
                                        </select>
                                    </div>

                                    <div class="col">
                                        <label for="partyBillNumber">Suppliers Inv. No:</label>
                                        <input type="text" class="form-control" name="partyBillNumber"
                                            id="partyBillNumber" value="<%=purchaseInvoice.partyBillNumber%>"
                                            autocomplete="off" onfocus="selectValue(this)" autocomplete="off">
                                    </div>

                                    <div class="col">
                                        <label for="isVatExempt">VAT</label>
                                        <select name="isVatExempt" id="isVatExempt" class="form-control"
                                            onchange="toggleVatInputs()" autocomplete="off">
                                            <% if (vatEnabled) {%>
                                                <option value="all"
                                                    <%=purchaseInvoice.isVatExempt===false&&purchaseInvoice.isVatAll==='true'
                                                    ? 'selected' :'' %>>All</option>
                                                <option value="false"
                                                    <%=purchaseInvoice.isVatExempt===false&&purchaseInvoice.isVatAll==='false'
                                                    ? 'selected' : '' %>>13%
                                                </option>
                                                <%}%>
                                                    <option value="true"
                                                        <%=purchaseInvoice.isVatExempt===true&&purchaseInvoice.isVatAll==='false'
                                                        ? 'selected' : '' %>>Exempt
                                                    </option>
                                        </select>
                                    </div>
                    </div>
                    <div class="form-group row">
                        <div class="col hidden">
                            <label for="purchaseSalesType">Type</label>
                            <select id="purchaseSalesType" name="purchaseSalesType" class="form-control" disabled>
                                <option value="Purchase">Purchase</option>
                            </select>
                        </div>
                        <div class="col-6">
                            <!-- Account Selection Input -->
                            <label for="account">Party Name:</label>
                            <input type="text" id="account" name="account" class="form-control"
                                value="<%=purchaseInvoice.account.name%>" autocomplete="off" required>
                            <!-- <input type="hidden" id="accountId" name="accountId"> -->
                            <input type="hidden" id="accountId" name="accountId"
                                value="<%= purchaseInvoice.account._id %>">
                        </div>
                        <div class="col">
                            <!-- New field for the address -->
                            <label for="address">Party Address:</label>
                            <input type="text" id="address" name="address" class="form-control"
                                value="<%=purchaseInvoice.account.address%>" autocomplete="off"
                                onfocus="selectValue(this)">
                        </div>
                        <div class="col">
                            <!-- New field for the address -->
                            <label for="pan">Vat No:</label>
                            <input type="text" id="pan" name="pan" class="form-control"
                                value="<%=purchaseInvoice.account.pan%>" autocomplete="off" onfocus="selectValue(this)">
                        </div>
                    </div>
                    <hr style="border: 1px solid gray;">
                    <table class="table table-bordered compact-table" id="itemsTable">
                        <thead>
                            <tr>
                                <th>S.No.</th>
                                <th>#</th>
                                <th>HSN</th>
                                <th>Description of Goods</th>
                                <th>WS Unit</th>
                                <th>Batch</th>
                                <th>Expiry</th>
                                <th>Qty</th>
                                <th>Bonus</th>
                                <th>Unit</th>
                                <th>Rate</th>
                                <th>Amount</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody id="items">
                            <!-- Item rows will be dynamically added here -->
                            <% if (items && items.length> 0) { %>
                                <% items.forEach((item, index)=> { %>
                                    <tr class="item <%= item.vatStatus ? 'vatable-item' : 'non-vatable-item' %>">
                                        <td>
                                            <%= index + 1 %>
                                        </td>
                                        <td>
                                            <%= item.item.uniqueNumber || 'N/A' %>
                                        </td>
                                        <td>
                                            <input type="hidden" name="items[<%= index %>][hscode]"
                                                value="<%= item.item.hscode || 'N/A' %>">
                                            <%= item.item.hscode || 'N/A' %>
                                        </td>
                                        <td class="col-3">
                                            <input type="hidden" name="items[<%= index %>][item]"
                                                value="<%= item.item._id %>">
                                            <%= item.item.name || 'N/A' %>
                                        </td>
                                        <td>
                                            <input type="number" name="items[<%=index%>][WSUnit]"
                                                value="<%=item.item.WSUnit%>" class="form-control item-WSUnit"
                                                id="WSUnit-<%=index%>" step="any" autocomplete="off"
                                                onfocus="selectValue(this)">
                                        </td>
                                        <td>
                                            <input type="text" name="items[<%= index %>][batchNumber]"
                                                value="<%= item.batchNumber || '' %>"
                                                class="form-control item-batchNumber" id="batchNumber-<%= index %>"
                                                onkeydown="handleBatchKeydown(event, <%= index %>)"
                                                onfocus="selectValue(this)" autocomplete="off">
                                        </td>
                                        <td>
                                            <input type="date" name="items[<%= index %>][expiryDate]"
                                                value="<%= item.expiryDate ? item.expiryDate.toISOString().split('T')[0] : '' %>"
                                                class="form-control item-expiryDate" id="expiryDate-<%= index %>"
                                                onkeydown="handleExpDateKeydown(event, <%= index %>)"
                                                onfocus="selectValue(this)" autocomplete="off">
                                        </td>
                                        <td>
                                            <input type="number" name="items[<%= index %>][quantity]"
                                                value="<%= item.quantity %>" class="form-control item-quantity"
                                                id="quantity-<%= index %>" step="any" oninput="updateItemTotal(this)"
                                                onkeydown="handleQuantityKeydown(event, <%= index %>)"
                                                onfocus="selectValue(this)" autocomplete="off">
                                        </td>
                                        <td>
                                            <input type="number" name="items[<%= index %>][bonus]"
                                                value="<%= item.bonus %>" class="form-control item-bonus"
                                                id="bonus-<%= index %>" step="any" oninput="updateItemTotal(this)"
                                                onkeydown="handleQuantityKeydown(event, <%= index %>)"
                                                onfocus="selectValue(this)" autocomplete="off">
                                        </td>
                                        <td>
                                            <%= item.unit.name %>
                                                <input type="hidden" name="items[<%= index %>][unit]"
                                                    value="<%= item.unit._id %>">
                                        </td>
                                        <td>
                                            <input type="number" name="items[<%= index %>][puPrice]"
                                                value="<%= item.puPrice || 0 %>" class="form-control item-puPrice"
                                                id="puPrice-<%= index %>" step="any" oninput="updateItemTotal(this)"
                                                onkeydown="handlePriceKeydown(event, <%= index %>)"
                                                onfocus="selectValue(this)" autocomplete="off">
                                        </td>
                                        <td class="item-amount">
                                            <%= (item.quantity * item.puPrice).toFixed(2) %>
                                        </td>
                                        <td>
                                            <button type="button" class="btn btn-danger" onclick="removeItem(this)">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </td>
                                        <input type="hidden" name="items[<%= index %>][vatStatus]"
                                            value="<%= item.vatStatus %>">

                                        <input type="hidden" id="marginPercentage-<%= index %>"
                                            value="<%= item.marginPercentage || '' %>">
                                        <input type="hidden" id="mrp-<%= index %>" value="<%= item.mrp || '' %>">
                                        <input type="hidden" id="salesPrice-<%= index %>"
                                            value="<%= item.price || '' %>">
                                        <input type="hidden" id="currency-<%= index %>"
                                            value="<%= item.currency || '' %>">
                                        <td class="hidden">
                                            <input type="text" name="items[<%=index%>][uniqueUuId]"
                                                value="<%=item.uniqueUuId%>">

                                        </td>
                                    </tr>
                                    <% }); %>
                                        <% } %>
                        </tbody>
                    </table>

                    <div class="form-group row">
                        <div class="col">
                            <label for="itemSearch">Search Item</label>
                            <input type="text" id="itemSearch" class="form-control" placeholder="Search for an item"
                                autocomplete="off" onkeydown="handleItemSearchKeydown(event)">
                            <div id="dropdownMenu" class="dropdown-menu"></div>
                        </div>
                    </div>

                    <hr style="border: 1px solid gray;">
                    <!-- Bill Details Table -->
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th colspan="6" class="text-center bg-light">Bill Details</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Sub Total Row -->
                                <tr>
                                    <td><label for="subTotal">Sub Total:</label></td>
                                    <td class="text-right">
                                        <p class="form-control-plaintext">Rs. <span id="subTotal">
                                                <%= purchaseInvoice.subTotal.toFixed(2) %>
                                            </span></p>
                                    </td>

                                    <td><label for="discountPercentage">Discount %:</label></td>
                                    <td>
                                        <input type="number" step="any" name="discountPercentage"
                                            id="discountPercentage" class="form-control"
                                            value="<%= purchaseInvoice.discountPercentage.toFixed(2) %>"
                                            oninput="calculateTotal()" onfocus="selectValue(this)" autocomplete="off">
                                    </td>
                                    <td><label for="discountAmount">Discount (Rs.):</label></td>
                                    <td>
                                        <input type="number" step="any" name="discountAmount" id="discountAmount"
                                            value="<%= purchaseInvoice.discountAmount.toFixed(2) %>"
                                            class="form-control" oninput="calculateTotal()" onfocus="selectValue(this)"
                                            autocomplete="off">
                                    </td>
                                </tr>

                                <!-- VAT Rows (Initially visible) -->
                                <tr id="taxableAmountRow">
                                    <td><label for="taxableAmount">Taxable Amount:</label></td>
                                    <td class="text-right">
                                        <p class="form-control-plaintext">Rs. <span id="taxableAmount">
                                                <%= purchaseInvoice.taxableAmount.toFixed(2) %>
                                            </span>
                                        </p>
                                    </td>
                                    <td><label for="vatPercentage">VAT (13%):</label></td>
                                    <td>
                                        <input type="number" name="vatPercentage" id="vatPercentage"
                                            class="form-control" value="13.00" readonly>
                                    </td>
                                    <td><label for="vatAmount">VAT Amount:</label></td>
                                    <td class="text-right">
                                        <p class="form-control-plaintext">Rs. <span id="vatAmount">
                                                <%= purchaseInvoice.vatAmount.toFixed(2) %>
                                            </span></p>
                                    </td>
                                </tr>
                                <!-- Round Off & Total Row -->
                                <tr>
                                    <td><label for="roundOffAmount">Round Off:</label></td>
                                    <td>
                                        <input type="number" class="form-control" step="any" id="roundOffAmount"
                                            name="roundOffAmount"
                                            value="<%= purchaseInvoice.roundOffAmount.toFixed(2) %>"
                                            oninput="calculateTotal()" onfocus="selectValue(this)" autocomplete="off">
                                    </td>
                                    <td><label for="totalAmount">Total Amount:</label></td>
                                    <td>
                                        <p class="form-control-plaintext">Rs. <span id="totalAmount">
                                                <%= purchaseInvoice.totalAmount.toFixed(2) %>
                                            </span></p>
                                    </td>
                                    <td><label for="amountInWords">In Words:</label></td>
                                    <td class="col-3 text-right">
                                        <p class="form-control-plaintext" id="amountInWords">Zero Only.</p>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <!-- Action Buttons -->
                    <div class="d-flex justify-content-end mt-4">
                        <button type="button" class="btn btn-primary mr-2 p-3" id="saveBill"
                            onclick="submitBillForm(false)">
                            <i class="bi bi-save"></i>
                        </button>
                        <button type="button" class="btn btn-secondary p-3" onclick="submitBillForm(true)">
                            <i class="bi bi-printer"></i>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

