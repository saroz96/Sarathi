<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.5.0/font/bootstrap-icons.min.css" rel="stylesheet">
<style id="printStyles">
    .card-title {
        text-decoration: underline;
    }

    .header {
        text-align: center;
        margin-bottom: 20px;
    }

    .header h1 {
        margin: 10px;
        font-size: 36px;
    }

    .details-container {
        display: flex;
        justify-content: space-between;
        /* width: 100%; */
        /* margin-bottom: 10px; */
    }

    .left,
    .right {
        width: 48%;
    }

    .left {
        /* text-align: left; */
        margin-left: 20px;
    }

    .right {
        flex: 1;
    }

    .right {
        text-align: right;
        margin-right: 20px;
    }

    .user-details {
        text-decoration: overline;
        text-align: center;
        display: block;
        margin-top: 10px;
        white-space: nowrap;
        /* Prevent text from wrapping */
    }

    #row-container {
        display: flex;
